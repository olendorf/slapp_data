<%= form_tag("/#{params['controller'].split('/').first}/inventories/#{resource.id}/give", html: {class: 'give_inventory'}) do %>
  <%= content_tag :fieldset, class: 'inputs' do %>
    <%= content_tag :ol do %>
      <%= content_tag :li, class: 'string input required stringish', id: 'avatar_name_input' do %>
        <%= label_tag(:avatar_name, "Avatar Name:", class: 'label') %>
        <%= text_field_tag(:avatar_name, nil, placeholder: 'Random Citizen', 
                                                           class: 'string input required stringish', 
                                                           id: 'give_inventory-avatar_name') %>
      <% end %>
    <% end %>
  <% end %>
  <%= content_tag :fieldset, class: 'actions' do %>
    <%= content_tag :br %>
    <%= submit_tag("Give Inventory") %>
  <% end %>
<% end %>